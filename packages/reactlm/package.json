{
  "name": "reactlm",
  "version": "0.1.0",
  "description": "Browser-native AI coding assistant for React developers",
  "keywords": [
    "react",
    "ai",
    "llm",
    "openrouter",
    "gpt-4",
    "claude",
    "gemini",
    "developer-tools",
    "code-assistant",
    "browser-native",
    "component-selection",
    "live-editing",
    "visual-debugging",
    "multi-model"
  ],
  "homepage": "https://reactlm.dev",
  "bugs": {
    "url": "https://github.com/your-org/reactlm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/reactlm.git",
    "directory": "packages/reactlm"
  },
  "license": "MIT",
  "author": "Your Name <email@example.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "reactlm": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup && node scripts/post-build.cjs",
    "postbuild": "node scripts/post-build.cjs",
    "build:optimized": "tsup --config tsup.config.optimized.ts",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "test": "vitest run",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run tests/integration/**/*.test.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format . --write",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run typecheck",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "bippy": "^0.3.17",
    "marked": "^11.0.0",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.4",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "happy-dom": "^18.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}